<% if resource.errors.present? && resource.errors.any? %>
  <%= content_tag :div, class: 'alert alert-danger resource-errors', data: { resource_id: resource.id } do %>
    <h2 class="alert-heading"><%= pluralize(resource.errors.count, 'error') %> detected:</h2>

    <ul>
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
