<tr>
  <td><%= badge.name %></td>
  <td><%= badge.file_name %></td>

  <% if user_signed_in? %>
    <td><%= link_to t(".show"), admin_badge_path(badge) %>
        <%= link_to t(".edit"), edit_admin_badge_path(badge) %>
        <%= link_to t(".delete"),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t(".confirm") } %>
    </td>
  <% end %>
</tr>
