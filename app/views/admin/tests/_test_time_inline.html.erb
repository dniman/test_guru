<%= form_with model: [:admin, test], 
              url: update_inline_admin_test_path(test), 
              local: true, 
              class: 'form-inline hide', 
              data: { test_id: test.id } do |form| %>
  <%= form.time_select :timer, { value: test.timer, include_seconds: true }, {} %>
  <%= form.submit t('.submit'), class: 'btn btn-primary btn-sm ml-2' %>
<% end %>
