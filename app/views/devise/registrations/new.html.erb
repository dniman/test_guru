<div class="row justify-content-center">
  <div class="col col-md-4">
    <h2>Become a Guru</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group">
        
        <%= devise_error_messages! %>
      
        <p>
          <%= f.label :first_name %><br>
          <%= f.text_field :first_name, id: :user_first_name, class: 'form-control' %>
        </p>
      
        <p>
          <%= f.label :last_name %><br>
          <%= f.text_field :last_name, id: :user_last_name, class: 'form-control' %>
        </p>
        
        <p>
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </p>
  
        <p>
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', onkeyup: 'clearPasswordConfirmation()' %>
        </p>
      
        <p>
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", onkeyup: 'checkEquality()', class: 'form-control' %>
        </p>
      </div>
      <%= f.submit "Sign up" %>
      <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
